<%= form model: minimage, enctype: "multipart/form-data" do %>
  <% if minimage.errors.any? %>
    <%= errors_form minimage %>
  <% end %>
  <%= horizontal_space %>
  <%= text_input minimage, :title %>
  <%= file_input minimage, :image %>
  <%= area_input minimage, :description %>
  <%= file_input minimage, :images, multiple: true %>

  <%= action_form %>
<% end %>
